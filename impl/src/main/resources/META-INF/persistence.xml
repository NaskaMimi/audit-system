<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="PostgrePersistence" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/PostgreDataSource</jta-data-source>
        <class>ru.rv.system.entity.secure.RoleEntity</class>
        <class>ru.rv.system.entity.secure.UserEntity</class>
        <class>ru.rv.system.entity.RuleEntity</class>
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>
    </persistence-unit>
</persistence>